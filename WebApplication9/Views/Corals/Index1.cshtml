                        }
                        <img src="@imgSrc" />
                    </div>

                    for (int i = 1; i < items.PhotoList.Count; i++)
                    {
                        <div class="item">
                            @{
                                var base642 = Convert.ToBase64String(items.PhotoList[i].Photo);
                                var imgSrc2 = String.Format("data:image/gif;base64,{0}", base642);
