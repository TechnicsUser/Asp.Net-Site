@model WebApplication9.Models.Coral

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Corals", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
