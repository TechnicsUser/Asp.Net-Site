@model WebApplication9.Models.MessagesReplyViewModel

@{
    ViewBag.Title = "Create Message";
}



@using (Html.BeginForm("MessagesReplyViewModel", "Messages", FormMethod.Post, new { @class = "form", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h3>Reply</h3>
            <div class="col-md-10">
                @*@Html.DropDownListFor(m => m.MessageTo, new SelectList(Model.Users, "IdUserName", "IdUserName"), "", htmlAttributes: new { @class = "form-control " })*@
                @Html.HiddenFor(model => model.MessageTo)
                @Html.HiddenFor(model => model.MessageId)
                @Html.HiddenFor(model => model.PreviousMessage)
                @Html.HiddenFor(model => model.Title)
                @Html.HiddenFor(model => model.Subject)

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="control-label  col-md-2">
                @Html.DisplayFor(model => model.Title)
             </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="control-label col-md-2">
                @Html.DisplayFor(model => model.Subject )
             </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @style = "height: 130px; " } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })

            </div>
        </div>




        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reply" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
